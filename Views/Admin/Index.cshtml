                <p class="text-gray-600">View and manage car servicing tickets.</p>
            </a>

            <!-- Car Selling Management Card -->
            <a href="@Url.Action("CarSellingManagement", "Admin")" class="bg-white shadow-lg rounded-lg p-6 hover:shadow-2xl transition duration-200">
