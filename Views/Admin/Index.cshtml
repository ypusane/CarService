                <p class="text-gray-600">Manage tickets for car selling services.</p>
            </a>

            <!-- Reports and Analytics Card -->
            <a href="@Url.Action("Reports", "Admin")" class="bg-white shadow-lg rounded-lg p-6 hover:shadow-2xl transition duration-200">
                <h2 class="text-xl font-semibold mb-4">Reports & Analytics</h2>
                <p class="text-gray-600">View detailed reports and analytics.</p>
            </a>
        </div>
