@model Carzz.ViewModels.EditRolesViewModel

@{
    ViewBag.Title = "Edit Role";
}

<h1>Edit Role</h1>

@using (Html.BeginForm("EditRole", "Administration", FormMethod.Post, new { @class = "mt-3" }))
{
    <div class="form-group row">
        <label for="Id" class="col-sm-2 col-form-label">Role ID</label>
        <div class="col-sm-10">
            <input id="Id" name="Id" value="@Model.Id" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label for="RoleName" class="col-sm-2 col-form-label">Role Name</label>
        <div class="col-sm-10">
            <input id="RoleName" name="RoleName" value="@Model.RoleName" class="form-control" />
            @if (ViewData.ModelState.ContainsKey("RoleName") && ViewData.ModelState["RoleName"].Errors.Any())
            {
                <span class="text-danger">
                    @string.Join(", ", ViewData.ModelState["RoleName"].Errors.Select(e => e.ErrorMessage))
                </span>
            }
        </div>
    </div>
    if (ViewData.ModelState.Values.SelectMany(m => m.Errors).Any())
    {
        <div class="text-danger">
            @string.Join("<br />", ViewData.ModelState.Values.SelectMany(m => m.Errors).Select(e => e.ErrorMessage))
        </div>
    }
    <button type="submit" class="btn btn-primary">Update</button>
    <a href="@Url.Action("ListRoles", "Administration")" class="btn btn-primary">Cancel</a>

    <div class="card mt-3">
        <div class="card-header">
            <h3>Users in this role</h3>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">None at the moment</h5>
            }
        </div>
        <div class="card-footer">
            <a href="@Url.Action("EditUserRole", "Administration", new { RoleId = Model.Id })" class="btn btn-primary" style="width:auto">Update or Remove Users</a>
        </div>
    </div>
}
