@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>

@{
    ViewBag.Title = "All Roles";
}
<h1>All Roles</h1>

@if (Model.Any())
{
    <a href="@Url.Action("CreateRole","ManageRoles")" class="btn btn-primary" style="width:auto">
        Add New Role
    </a>
    foreach (var role in Model)
    {
        <div class="card">
            <div class="card-header">
                @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    @role.Name
                </h5>
            </div>
            <div class="card-footer">
                <a href="@Url.Action("EditRole","ManageRoles") new{id=role.Id})" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No Roles created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button to create a role
            </h5>
            <a href="@Url.Action("CreateRole","ManageRoles")" class="btn btn-primary" style="width:auto">Create Role</a>
        </div>
    </div>
}
